<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="appName" source="spring.application.name"/>
    <property name="ENCODING" value="UTF-8"/>
    <property name="LOG_LEVEL" value="INFO"/>
    <property name="LOG_PATH" value="./logs/${appName}"/>
    <property name="APP_NAME" value="${appName}"/>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>
                <property name="ENCODING" value="${ENCODING}"/>
            </charset>
        </encoder>
    </appender>

    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>localhost:5000</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
<!--            <fieldNames>-->
<!--                <timestamp>timestamp</timestamp>-->
<!--                <message>message</message>-->
<!--                <stackTrace>stacktrace</stackTrace>-->
<!--                <logLevel>severity</logLevel>-->
<!--                <loggerName>loggerName</loggerName>-->
<!--                <stackHash>stackHash</stackHash>-->
<!--                <stackTrace>stackTrace</stackTrace>-->
<!--            </fieldNames>-->

            <writeVersionAsInteger>true</writeVersionAsInteger>
            <timeZone>UTC</timeZone>
            <shortenedLoggerNameLength>-1</shortenedLoggerNameLength>
            <includeMdc>true</includeMdc>

            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>-1</maxDepthPerThrowable>
                <maxLength>-1</maxLength>
                <shortenedClassNameLength>-1</shortenedClassNameLength>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>
        </encoder>
    </appender>

    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGSTASH"/>
    </root>
</configuration>
